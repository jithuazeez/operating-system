#include<stdio.h>
#include<stdlib.h>
#include<time.h>
#include<unistd.h>
#include<pthread.h>
#include<sys/wait.h>

#define MIN_PID 100
#define MAX_PID 1000
  
int pid[MAX_PID-MIN_PID]={0};
pthread_mutex_t p;

int allocate_pid(void){
    int i,flag=1;
    for(i=0; i<(MAX_PID-MIN_PID); i++){
        if(pid[i]==0){
           pthread_mutex_lock(&p);
             pid[i]=1;
            flag=0;
            pthread_mutex_unlock(&p);
            break;
        }
    }
    return flag?-1:i;
